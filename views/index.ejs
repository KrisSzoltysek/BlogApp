<% include ./partials/header %>

<div class="ui main text container segment">
    <% blogs.reverse().forEach(function(blog){ %>
        <div class="ui top attached segment">
            <div class="ui huge header"> <a id="header" href="/blogs/<%= blog._id %>"> <%= blog.title %> </a> </div>
            <div class="item">
                <img class="ui huge bordered centered rounded image" src="<%= blog.image %>"></img>
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blog.body.substring(0, 100) %></p>
                </div>
                <div class="buttons">
                    <a class="ui small primary basic button" href="/blogs/<%= blog._id %>">Read More</a>
                    <a class="ui small positive basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                    <form class="buttons" action="/blogs/<%= blog._id %>?_method=DELETE" method=POST>
                        <button class="ui small negative basic button">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<% include ./partials/footer %>